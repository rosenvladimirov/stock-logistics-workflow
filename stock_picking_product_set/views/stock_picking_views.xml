<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="inside">
                <page string="Product sets" name="product_sets">
                    <field name="product_set_ids" mode="tree">
                        <tree>
                            <field name="picking_id" invisible="1"/>
                            <field name="product_set_id"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </page>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree" position="inside">
                <field name="product_set_id"
                       options='{"no_create": True}'
                       optional="hide"/>
                <field name="product_set_line_id"
                       optional="hide"
                       context="{'search_default_product_set_id': product_set_id, 'default_product_set_id': product_set_id}"/>
            </xpath>
        </field>
    </record>
</odoo>
